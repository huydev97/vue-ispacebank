<script> 
import '../../../../node_modules/country-region-dropdowns/dist/crs'

export default {
    name: 'loginform',
    props: {
        login: Function,
        isRequesting: Boolean
    },

    data() {
        return {
            countyCode: '',
            valid: false,

            username: '',
            usernameRules: [
                (v) => !!v || 'Name is required',
                (v) => v.length >= 6 || 'Name must be at least 6 characters'
            ],

            password: '',
            repeatPassword: '',
            passwordRules: [
                (v) => !!v || 'Password is required',
                (v) => (v === this.$data.password) || 'Repeat password does not match password'
            ],
            email: '',
            repeatEmail: '',
            emailRules: [
                (v) => !!v || 'E-mail is required',
                (v) => /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/.test(v) || 'E-mail must be valid',
                (v) => (v === this.$data.email) || 'Repeat email does not match email'
            ],
            phoneNumber: Number,

            agree: true,

            isRequesting: false,
            loginErrorMessage: ''
        }
    },
    computed: {
        _isRequesting() {
            return this.isRequesting
        }
    },
    methods: {
        clearForm() {
            this.$refs.registerForm.reset()
        },

    }
}
