import Vue from 'vue'
import Router from 'vue-router'

const HomePage = () => import('@/containers/HomePage')
const LoginPage = () => import('@/containers/LoginPage')
const RegisterPage = () => import('@/containers/RegisterPage')
const ServicePage = () => import('@/containers/ServicePage')
const Contact = () => import ('@/containers/ContactPage')
Vue.use(Router)

export default new Router({
  mode: 'history',
  routes: [
    {
      path: '/',
      name: 'home',
      component: HomePage
    },
    {
      path: '/services',
      name: 'services',
      component: ServicePage
    },
    {
      path: '/login',
      name: 'login',
      component: LoginPage
    },
    {
      path: '/register',
      name: 'register',
      component: RegisterPage
    },
    {
      path: '/contact',
      name: 'contact',
      component: Contact
    }
  ],
  scrollBehavior(to, from, savedPosition) {
    return { x: 0, y: 0 }
  }
})
